<div class="narrativeCode-inner  component-inner">
    {{> component this}}
    <div class="narrativeCode-widget component-widget {{#if _hasNavigationInTextArea}}narrativeCode-text-controls{{/if}}">

        <div class="narrativeCode-content">
            <div class="narrativeCode-content-inner">
                {{#each _items}}
                <div class="narrativeCode-content-item {{#if _isVisited}}visited{{/if}}" data-index="{{@index}}">
                    <div class="narrativeCode-content-title">
                        <div class="narrativeCode-content-title-inner" {{a11y_attrs_heading 'componentItem'}}>
                            {{{title}}}
                        </div>
                    </div>
                    <div class="narrativeCode-content-body">
                        <div class="narrativeCode-content-body-inner">
                            {{{compile body}}}
                        </div>
                    </div>
                </div>
                {{/each}}
                <div class="narrativeCode-controls-container clearfix">
                    <div class="narrativeCode-indicators">
                        {{#each _items}}
                        <div class="narrativeCode-progress component-item-color component-item-border {{#if _isVisited}}visited{{/if}}" data-index="{{@index}}"></div>
                        {{/each}}
                    </div>
                    <button class="base narrativeCode-controls narrativeCode-control-left" role="button" aria-label="{{_globals._accessibility._ariaLabels.previous}}">
                        <div class="icon icon-controls-left"></div>
                    </button>
                    <button class="base narrativeCode-controls narrativeCode-control-right" role="button" aria-label="{{_globals._accessibility._ariaLabels.next}}">
                        <div class="icon icon-controls-right"></div>
                    </button>
                </div>
            </div>
        </div>

        <div class="narrativeCode-strapline">
            <div class="narrativeCode-strapline-header">
                <div class="narrativeCode-strapline-header-inner clearfix" style="width: {{_totalWidth}}%">
                    <div></div>
                    {{#each _items}}
                    <button class="base narrativeCode-strapline-title {{#if _isVisited}}visited{{/if}}" aria-label="{{{strapline}}}" style="width: {{../_itemWidth}}%" data-index="{{@index}}">
                        <div class="narrativeCode-strapline-title-inner h5">
                            {{{strapline}}}
                        </div>
                        <div class="icon icon-plus"></div>
                        <div class="focus-rect"></div>
                    </button>
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="narrativeCode-slide-container">

            <div class="narrativeCode-indicators">
                {{#each _items}}
                <div class="narrativeCode-progress component-item-color component-item-border {{#if _isVisited}}visited{{/if}}" data-index="{{@index}}"></div>
                {{/each}}
            </div>
            <button class="base narrativeCode-controls narrativeCode-control-left" aria-label="{{_globals._accessibility._ariaLabels.previous}}">
                <div class="icon icon-controls-left"></div>
            </button>
            <button class="base narrativeCode-controls narrativeCode-control-right" aria-label="{{_globals._accessibility._ariaLabels.next}}">
                <div class="icon icon-controls-right"></div>
            </button>

            <div class="narrativeCode-slider clearfix" style="width: {{_totalWidth}}%">
                {{#each _items}}
                <div class="narrativeCode-slider-code {{#if _isVisited}}visited{{/if}}" style="width: {{../_itemWidth}}%" data-index="{{@index}}">
                    <pre class="language-{{code.lang}}"><code class="language-{{code.lang}}">{{code.src}}</code></pre>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="clearfix"></div>

    </div>
</div>
